<Window x:Class="WpfDemoApp.Examples.ExampleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDemoApp.Examples"
        xmlns:exampleControls="clr-namespace:WpfDemoApp.Examples.Controls"
        mc:Ignorable="d"
        Title="ExampleWindow" Height="450" Width="800">
    <StackPanel 
        HorizontalAlignment="Left">
        <exampleControls:ExampleControl />
        <Button 
            Content="Click me!" 
            Click="ButtonClick"></Button>
    </StackPanel>

</Window>
