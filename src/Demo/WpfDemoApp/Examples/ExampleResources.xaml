<Window x:Class="WpfDemoApp.Examples.ExampleResources"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDemoApp.Examples"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="ExampleResources" Height="450" Width="800">
    <Window.Resources>

        <SolidColorBrush x:Key="Color1" Color="#0CCCCC" />

        <system:String x:Key="String1">Hello World</system:String>

        <system:Double x:Key="Integer1">300</system:Double>

    </Window.Resources>
    <StackPanel Background="{StaticResource Color1}">
        <Button 
            Content="{StaticResource String1}"
            Width="{DynamicResource Integer1}"
            HorizontalAlignment="Left"/>
    </StackPanel>
</Window>
