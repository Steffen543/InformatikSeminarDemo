<Window x:Class="WpfDemoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDemoApp"
        xmlns:view="clr-namespace:WpfDemoApp.UI.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="5" />
        </Style>
    </Window.Resources>
    <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10">
        <Button Click="ButtonClick" Content="ExampleWindow" />
        <Button Click="ButtonClick" Content="ExampleResource" />
        <Button Click="ButtonClick" Content="ExampleBinding" />
        <Button Click="ButtonClick" Content="ExampleConverter" />
        <Button Click="ButtonClick" Content="ExampleStyle" />
        <Button Click="ButtonClick" Content="ExampleDataTemplate" />
        <Button Click="ButtonClick" Content="ExampleMVVM" />
        <Button Click="ButtonClick" Content="ExampleDevExpressMVVM" />
    </StackPanel>
</Window>
